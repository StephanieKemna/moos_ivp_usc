ServerHost = 127.0.0.1//localhost
ServerPort = $(VPORT)
Community  = $(VNAME)

modem_id_lookup_path = ../../cruise/current/data/modemidlookup.txt
modem_id = $(MODEMID)

#include plugs/plug_origin_warp.moos
  
